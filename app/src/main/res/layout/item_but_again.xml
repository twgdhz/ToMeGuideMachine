<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding"
    android:paddingBottom="@dimen/margin_top_15">

    <android.support.v7.widget.CardView
        android:id="@+id/ll_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="140dp">

                    <ImageView
                        android:id="@+id/img_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/ic_home_reproduction" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@color/text_color21"
                        android:paddingBottom="@dimen/height_1dp"
                        android:paddingLeft="@dimen/margin_top"
                        android:paddingTop="@dimen/height_1dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/home_page_txt_12" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top"
                        android:paddingLeft="@dimen/margin_top">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="青城山套票"
                            android:textSize="@dimen/home_page_txt_12" />

                        <TextView
                            android:id="@+id/tv_grade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_top"
                            android:layout_weight="1"
                            android:text="5A"
                            android:textColor="@color/text_color3"
                            android:textSize="@dimen/home_page_txt_12" />

                        <TextView
                            android:id="@+id/tv_sales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_top"
                            android:text="已售80份"
                            android:textColor="@color/text_color22"
                            android:textSize="@dimen/home_page_txt_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_top"
                        android:paddingTop="@dimen/margin_top">

                        <TextView
                            android:id="@+id/tv_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_advance_payment"
                            android:paddingLeft="@dimen/margin_top"
                            android:paddingRight="@dimen/margin_top"
                            android:text="5.0分"
                            android:textColor="@color/text_color3"
                            android:textSize="@dimen/home_page_txt_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_top"
                            android:background="@drawable/shape_advance_payment"
                            android:paddingLeft="@dimen/margin_top"
                            android:paddingRight="@dimen/margin_top"
                            android:text="美食"
                            android:textColor="@color/text_color3"
                            android:textSize="@dimen/home_page_txt_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/margin_top"
                        android:paddingLeft="@dimen/margin_top">

                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="距您128km"
                            android:textColor="@color/text_color22"
                            android:textSize="@dimen/home_page_txt_12" />

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_top"
                            android:text="150"
                            android:textColor="@color/text_color3"
                            android:textSize="@dimen/home_page_txt_18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_top"
                            android:text="起"
                            android:textColor="@color/text_color22"
                            android:textSize="@dimen/home_page_txt_12" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_top"
                android:background="@mipmap/ic_home_guess_you_love_sign"
                android:paddingLeft="@dimen/margin_top"
                android:paddingRight="@dimen/margin_top"
                android:text="四川  红原"
                android:visibility="gone"
                android:textColor="@color/white" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>