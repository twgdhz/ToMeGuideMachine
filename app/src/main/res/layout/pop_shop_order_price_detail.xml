<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/half_transparent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_color41">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_left"
                android:text="费用明细"
                android:textColor="@color/text_color40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/margin_top">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:text="商品金额"
                android:textColor="@color/text_color39" />

            <TextView
                android:id="@+id/tv_unit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:text="￥"
                android:textColor="@color/orange"
                android:textSize="@dimen/home_page_txt_16" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text=""
                android:textColor="@color/text_color39" />
        </LinearLayout>

        <View
            style="@style/divider_line"
            android:layout_height="@dimen/height_1dp"
            android:background="@color/divider_line" />
        <LinearLayout
            android:id="@+id/ll_freight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            android:paddingBottom="@dimen/margin_top">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:text="运费"
                android:textColor="@color/text_color39" />

            <TextView
                android:id="@+id/tv_freight_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:text="￥"
                android:textColor="@color/text_color39"
                android:textSize="@dimen/home_page_txt_16" />

        </LinearLayout>

        <View
            android:id="@+id/divider_freight"
            style="@style/divider_line"
            android:layout_height="@dimen/height_1dp"
            android:background="@color/divider_line" />
        <LinearLayout
            android:id="@+id/ll_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/margin_top">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:text="优惠"
                android:textColor="@color/text_color39" />

            <TextView
                android:id="@+id/tv_unit_discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:text="￥"
                android:textColor="@color/text_color39"
                 />

            <TextView
                android:id="@+id/tv_discount_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text=""
                android:textColor="@color/text_color39" />
        </LinearLayout>

        <View
            android:id="@+id/divider_discount"
            style="@style/divider_line"
            android:layout_height="@dimen/height_1dp"
            android:background="@color/divider_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_left"
                android:text="合计"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_left"
                android:layout_weight="2"
                android:text=""
                android:textColor="@color/text_color39" />
        </LinearLayout>

        <View
            style="@style/divider_line"
            android:layout_height="@dimen/height_1dp"
            android:background="@color/divider_line" />
    </LinearLayout>


</LinearLayout>