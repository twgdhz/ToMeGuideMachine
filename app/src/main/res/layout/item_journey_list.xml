<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="@dimen/adaptive_15dp"
    android:background="@color/withe"
    app:layout_constraintTop_toTopOf="parent"
    android:paddingBottom="@dimen/adaptive_10dp">

    <ImageView
        android:id="@+id/img_item_journey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/adaptive_15dp"
        android:layout_marginTop="@dimen/adaptive_12dp"
        android:background="@mipmap/ic_item_journey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_journey_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/adaptive_15dp"
        android:text="团行程"
        android:layout_marginTop="@dimen/adaptive_10dp"
        android:layout_toRightOf="@id/img_item_journey"
        />

    <TextView
        android:id="@+id/tv_journey_turns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/adaptive_25dp"
        android:layout_marginLeft="@dimen/adaptive_45dp"
        android:text="成都-青城山-峨眉山-都江堰-成都"
        android:layout_marginTop="@dimen/adaptive_15dp"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/tv_journey_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/adaptive_15dp"
        android:text="2018-12-12  12:12"
        android:layout_marginTop="@dimen/adaptive_10dp"
        android:layout_alignParentRight="true" />
</RelativeLayout>