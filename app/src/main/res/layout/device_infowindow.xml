<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_guide_device_infowindow_bg"
        android:orientation="vertical"
        android:padding="@dimen/adaptive_15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_device_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:text="1002042"
                android:textColor="@color/text_color62"
                android:textSize="@dimen/home_page_txt_14" />

            <TextView
                android:id="@+id/tv_device_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（离线）"
                android:textColor="@color/line_color_gray_deep"
                android:textSize="@dimen/home_page_txt_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/adaptive_10dp"
                android:text="GPS定位"
                android:textColor="@color/line_color_gray_deep"
                android:textSize="@dimen/home_page_txt_12" />

            <TextView
                android:id="@+id/tv_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/adaptive_10dp"
                android:text="100%"
                android:textColor="@color/line_color_gray_deep"
                android:textSize="@dimen/home_page_txt_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:paddingLeft="@dimen/margin_5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线时间："
                android:textColor="@color/line_color_gray_deep"
                android:textSize="@dimen/home_page_txt_12" />

            <TextView
                android:id="@+id/tv_online_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-12-08-06:06:06"
                android:textColor="@color/line_color_gray_deep"
                android:textSize="@dimen/home_page_txt_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:paddingLeft="@dimen/margin_5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定位时间："
                android:textColor="@color/line_color_gray_deep"
                android:textSize="@dimen/home_page_txt_12" />

            <TextView
                android:id="@+id/tv_location_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-12-08-06:06:06"
                android:textColor="@color/line_color_gray_deep"
                android:textSize="@dimen/home_page_txt_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:text="四川省都江堰市西南部青城山风景区"
            android:textColor="@color/line_color_gray_deep"
            android:textSize="@dimen/home_page_txt_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/adaptive_10dp"
            android:layout_marginTop="@dimen/adaptive_10dp">

            <ImageView
                android:id="@+id/img_dial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_guide_dial_infowindow" />

            <ImageView
                android:id="@+id/img_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/home_page_txt_12"
                android:background="@mipmap/ic_guide_message_infowidow" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>