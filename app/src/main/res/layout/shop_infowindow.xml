<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_bubble"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:paddingRight="@dimen/padding">

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_5dp"
                android:background="@color/text_color4" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="薛涛纪念馆"
                android:textColor="#333333"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/img_go_there"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/adaptive_10dp"
                android:background="@mipmap/ic_go_in_shop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_see_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_see_pic"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_play_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_play_video"
                android:layout_marginLeft="@dimen/margin_top"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>